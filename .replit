modules = ["web", "python-3.11", "nodejs-20", "bash"]
run = "run"

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales", "openssl", "postgresql", "sqlite"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --workers 2 --timeout 60 main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33555
externalPort = 3000

[[ports]]
localPort = 43025
externalPort = 3001

[agent]
expertMode = true
